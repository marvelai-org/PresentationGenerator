# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=

# Image Generation Configuration
IMAGE_API_KEY=

# Google AI (Gemini) Configuration
# IMPORTANT: Never commit the actual credentials file to version control
GOOGLE_APPLICATION_CREDENTIALS=your-google-credentials-file.json
PROJECT_ID=your-google-project-id
# SECURITY: Use a service account with minimal permissions
GOOGLE_API_KEY=your-google-api-key

# Together.ai Configuration for Image Generation
TOGETHER_API_KEY=your-together-api-key

# OpenRouter.ai Configuration for Text Generation
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_TEXT_MODEL=meta-llama/llama-4-maverick:free

# Storage Configuration
# Google Cloud Storage
SLIDE_IMAGES_BUCKET_NAME=your-gcs-bucket-name

# Supabase Storage Configuration
# NOTE: Create the 'slide-images' bucket manually through the Supabase dashboard
# and set it to public by enabling the "Public Bucket" option
SUPABASE_URL=your-supabase-url
# SECURITY: Never commit the actual service key to version control
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_STORAGE_BUCKET=slide-images

# Security Configuration
API_SECRET_KEY=

# Logging Configuration
LOG_LEVEL=INFO

# AI API Keys
COHERE_API_KEY=your_cohere_api_key

# Vector DB (Optional)
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_URL=your_qdrant_url

# Service Configuration
PORT=8000
HOST=127.0.0.1
# Options: development, production, testing
ENVIRONMENT=development

# CORS Settings (for production, specify your frontend URL)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

#########################
# SECURITY BEST PRACTICES:
# 1. Never commit .env files to version control
# 2. Use different API keys for development and production
# 3. Restrict API key permissions to only what's needed
# 4. Regularly rotate your API keys
# 5. Use environment variables managers for production deployments
